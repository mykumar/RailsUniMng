<h3 class="page-header">Listing Categories</h3>

<table class="mdl-data-table mdl-js-data-table mdl-data-table mdl-shadow--2dp">
  <thead>
    <tr>
      <th class="mdl-data-table__cell--non-numeric">Name</th>     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td  class="mdl-data-table__cell--non-numeric"><%= category.name %></td>       
        <td  class="mdl-data-table__cell--non-numeric"><%= link_to 'Show', category %></td>
        <td  class="mdl-data-table__cell--non-numeric"><%= link_to 'Edit', edit_category_path(category) %></td>
        <td  class="mdl-data-table__cell--non-numeric"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
