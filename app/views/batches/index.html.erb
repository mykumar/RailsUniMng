<h3 class="page-header">Listing Batches</h3>

<table  class="mdl-data-table mdl-js-data-table mdl-data-table mdl-shadow--2dp">
  <thead>
    <tr>
      <th class="mdl-data-table__cell--non-numeric">Name</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @batches.each do |batch| %>
      <tr>
        <td  class="mdl-data-table__cell--non-numeric"><%= batch.name %></td>      
        <td  class="mdl-data-table__cell--non-numeric"><%= link_to 'Show', batch %></td>
        <td  class="mdl-data-table__cell--non-numeric"><%= link_to 'Edit', edit_batch_path(batch) %></td>
        <td class="mdl-data-table__cell--non-numeric"><%= link_to 'Destroy', batch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Batch', new_batch_path, class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored"%>
